{
  "extends": "../tsconfig.json",
  "include": ["db", "email", "functions", "http"],
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/db/*": ["./db/*"],
      "@/email/*": ["./email/*"],
      "@/http/*": ["./http/*"]
    }
  }
}
